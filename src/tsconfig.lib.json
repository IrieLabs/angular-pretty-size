{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "es2015",
    "target": "es5",
    "noImplicitAny": false,
    "lib": [
      "es2016",
      "dom"
    ],
    "outDir": "../dist/lib",
    "baseUrl": "",
    "typeRoots": [
      "../node_modules/@types"
    ]
  },
  "angularCompilerOptions": {
    "skipMetadataEmit":true,
    "skipTemplateCodegen":true
  },
  "include": [
    "./app/prettysize/*"
  ],
  "exclude": [
    "node_modules",
    "test.ts",
    "**/*.spec.ts"
  ]
}

